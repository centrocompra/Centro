@model ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
@section scripts{
<script src="@Url.Content("~/Scripts/Custom/resetPassword.js")" type="text/javascript"></script>
}
<div class="row">
    <div class="floatleft mtop10">
        <h1>
            Change Password</h1>
    </div>
</div>
@using (Ajax.BeginForm("ChangePassword", "Home", FormMethod.Post, new AjaxOptions { OnBegin = "OnBegin", OnComplete = "ResetPassword.OnResetComplete" }, new { @name = "resetpassword" }))
{
    <div align="center" class="whitebox mtop15">
        <table cellspacing="0" cellpadding="7" border="0" align="center">
            <tr>
                <td align="left" width="150">
                    <strong>@Html.LabelFor(m => m.CurrentPassword)</strong>
                </td>
                <td align="left">
                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "input", @style = "width:450px;" })
                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            <tr>
                <td align="left">
                    <strong>@Html.LabelFor(m => m.NewPassword)</strong>
                </td>
                <td align="left">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "input", @style = "width:450px;" })
                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            <tr>
                <td align="left">
                    <strong>@Html.LabelFor(m => m.ConfirmPassword)</strong>
                </td>
                <td align="left">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input", @style = "width:450px;" })
                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td align="center">
                    &nbsp;
                </td>
                <td align="left">
                    <div class="black_btn2">
                        <span class="upper">
                            <input type="submit" value="SUBMIT" name=""></span></div>
                </td>
            </tr>
        </table>
    </div>
}