@model Contest
@{
    ViewBag.Title = "Add New UX Challenge";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
@section styles{
    <link href="@Url.Content("~/Content/css/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        form table tr {
            height: 45px;
        }
        
        form table tr td:first-child {
            width: 180px;
        }
    </style>
}

<div class="row">
    <div class="floatleft mtop10">
        <h1>
            Add New Category</h1>
    </div>
    <div class="floatright">
        <a href="@Url.Action("ManageContest", "Contest")" class="black_btn"><span>Back To Manage
            Challenges</span></a>
    </div>
</div>
@using (Ajax.BeginForm("AddEditCategory", "Categories", FormMethod.Post, new AjaxOptions { OnBegin = "OnBegin", OnComplete = "AddCategory.OnAddCategoryComplete" }, new { @name = "addCategory" }))
{
    @Html.HiddenFor(m => m.CategoryID)
    
    <div align="center" class="whitebox mtop15">
        <table cellspacing="0" cellpadding="7" border="0">
            @Html.HiddenFor(m => m.UserID);
            <tr>
                <td align="left">
                    <strong>Category</strong>
                </td>
                <td align="left">
                    @Html.DropDownListFor(m => m.CategoryID, new SelectList(Model.Categories, "CategoryID", "Name"), new { @class = "input", @style = "width:500px !important;" })
                    @Html.ValidationMessageFor(m => m.CategoryID, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            <tr>
                <td valign="top" align="left">
                    <strong>Title</strong>
                </td>
                <td align="left">
                    @Html.TextBoxFor(m => m.Title, new { @class = "input", @style = "width:500px !important;" })
                    @Html.ValidationMessageFor(m => m.Title)
                </td>
            </tr>
            <tr>
                <td valign="top" align="left" style="vertical-align: top;">
                    <strong>Description</strong>
                </td>
                <td align="left">
                    @Html.TextAreaFor(m => m.Description, new { @class = "input", @style = "width:500px !important; height:150px; margin-bottom:15px;" })
                    @Html.ValidationMessageFor(m => m.Description)
                </td>
            </tr>
            <tr>
                <td valign="top" align="left">
                    <strong>Start Date</strong>
                </td>
                <td align="left">
                    @Html.TextBoxFor(m => m.StartDate, new { @class = "input date-control", @readonly = "readonly", @style = "width:150px !important;" })
                    @Html.ValidationMessageFor(m => m.StartDate)&nbsp;&nbsp;<strong>End Date </strong>
                    @Html.TextBoxFor(m => m.EndDate, new { @class = "input date-control", @readonly = "readonly", @style = "width:150px !important;" })
                    @Html.ValidationMessageFor(m => m.EndDate)
                </td>
            </tr>
            <tr>
                <td valign="top" align="left">
                    <strong>Contest Criteria</strong>
                </td>
                <td align="left">
                    <input type="text" class="input" style="width: 500px !important;" value=" " />
                </td>
            </tr>
            <tr>
                <td>
                </td>
                <td align="left">
                    <input type="text" class="input" style="width: 500px !important;" value=" " />
                </td>
            </tr>
            <tr>
                <td valign="top" align="left" style="vertical-align: top;">
                    <strong>Challenge Rules</strong>
                </td>
                <td align="left">
                    @Html.TextAreaFor(m => m.TermsAndCondition, new { @class = "input", @style = "width:500px !important; height:150px; margin-bottom:15px;" })
                    @Html.ValidationMessageFor(m => m.TermsAndCondition)
                </td>
            </tr>
            <tr>
                <td valign="top" align="left" style="vertical-align: top;">
                    <strong>Why bother joining?</strong>
                </td>
                <td align="left">
                    @Html.TextAreaFor(m => m.TermsAndCondition, new { @class = "input", @style = "width:500px !important; height:150px; margin-bottom:15px;" })
                    @Html.ValidationMessageFor(m => m.TermsAndCondition)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td align="center">
                    &nbsp;
                </td>
                <td align="left">
                    <div class="black_btn2">
                        <span class="upper">
                            <input type="submit" value="SUBMIT" name=""></span></div>
                </td>
            </tr>
        </table>
    </div>
}
