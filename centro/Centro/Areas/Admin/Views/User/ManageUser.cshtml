@model PagingResult<UserListing_Result>
@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
<!--Body Start from Here-->

    <h1>
        Manage Users</h1>
        <div class="row mtop15">
			<table width="100%" cellspacing="0" cellpadding="0" border="0" align="center" class="searchbox">
                <tr valign="top">
                  <td align="left" class="searchbox">
                    <div class="floatleft">
                          <table cellspacing="0" cellpadding="4" border="0">
                          <tr valign="top">
                              <td valign="middle">Search By Username</td><td valign="middle" align="left" >
                              @Html.TextBox("login",null,new{@class="input",@id="login",@style="width:300px;"})
                              
                              </td>
                              
                              <td valign="middle" align="left"><div class="black_btn2"><span class="upper"><input type="button" onclick="javascript:UserFilter(this);" value="Submit" name=""></span></div></td>
                            </tr>
                        </table>
                    </div>
                    
                    <div class="floatright top5">
                     <a href="@Url.Action("AddEditUser", "User")" class="black_btn"><span>Add New User</span></a>
                    </div>
                    
                  </td>
              </tr>
			</table>
	</div>

        <div class="row">
        <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center">
            <tr valign="top">
                <td align="left">
                    <div class="floatleft mtop15">
                    @Html.DropDownList("UserAction", (List<SelectListItem>)ViewBag.UserActionList, new { onchange = "javascript:UpdateUsers(this);", @class = "select" })
                       
                    </div>
                  
                </td>
            </tr>
        </table>
    </div>
   
<br />
       <div class="row mtop15">
        <table width="100%" cellspacing="0" cellpadding="0" border="0" align="center" class="listing">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" onclick="javascript:CheckAll(this);" />
                    </th>
                    <th>
                        <span class="Username">UserName</span><img src="@Url.Content("~/Content/images/asc.gif")" class="sort up" onclick="sort(this);" />
                    </th>
                    <th>
                        <span class="FirstName">First Name</span><img src="@Url.Content("~/Content/images/asc.gif")" class="sort up" onclick="sort(this);" />
                    </th>
                    <th>
                        <span class="Lastname">Last Name</span><img src="@Url.Content("~/Content/images/asc.gif")" class="sort up" onclick="sort(this);" />
                    </th>
                    <th>
                        <span class="EmailId">E-mail</span><img src="@Url.Content("~/Content/images/asc.gif")" class="sort up" onclick="sort(this);" />
                    </th>
                    <th>
                        <span class="CreatedOn">Date&nbsp;of&nbsp;Registration</span><img src="@Url.Content("~/Content/images/asc.gif")" class="sort up" onclick="sort(this);" />
                    </th>
                      <th align="center" style=" text-align:center">
                        <span class="IsAccountBlocked">Active Account</span>
                    </th>
                    <th style=" text-align:center">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody id="Result">
                @Html.Partial("_Users", Model)
            </tbody>
        </table>

        <div id="pagingWrapper" class="pagingWrapper">
            <div id="pager" class="row pt10">
                <span id="first">« First</span> <span id="previous">Previous</span> <span id="numeric">
                </span><span id="next">Next</span> <span id="last">Last »</span>
            </div>
            <div id="pageInfo" class="pageInfo">
            </div>
        </div>
    </div>

<!--Body end Here-->
@section scripts{
    <link href="@Url.Content("~/Content/paging/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Custom/paging.js")" type="text/javascript"></script>
}
<style type="text/css">
    th
    {
        font-size: 13px;
        font-weight: bold;
        background-color: #ddd;
    }
    th, td
    {
        padding: 2px 5px;
    }
    select
    {
        margin-bottom: 0px !important;
    }
    .sort
    {
        vertical-align: middle;
        cursor: pointer;
    }
</style>
<script type="text/javascript">
    var totalCount = "@Model.TotalCount";    
</script>
<script src="@Url.Content("~/Scripts/Custom/admin/userPaging.js")" type="text/javascript"></script>
