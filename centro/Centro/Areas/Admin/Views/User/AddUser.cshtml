@model BusinessLayer.Models.DataModel.User
@using BusinessLayer.Classes;
@{
    ViewBag.Title = "Add User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
@section scripts{
    <script src="@Url.Content("~/Scripts/Custom/admin/_addUser.js")" type="text/javascript"></script>
}

<div class="row">
    <div class="floatleft mtop10">
        <h1>
            Add New User</h1>
    </div>
    <div class="floatright">
        <a href="@Url.Action("ManageUser", "User")" class="black_btn"><span>Back To Manage Users</span></a></div>
</div>
@using (Ajax.BeginForm("AddEditUser", "User", FormMethod.Post, new AjaxOptions { OnBegin = "OnBegin", OnComplete = "AddUser.OnAddUserComplete" }, new { @name = "addUser" }))
{
    @Html.HiddenFor(m=>m.UserID)
    
    <div align="center" class="whitebox mtop15">
        <table cellspacing="0" cellpadding="7" border="0" align="center">
            <tr>
                <td align="left">
                    <strong>@Html.LabelFor(m => m.FirstName)</strong>
                </td>
                <td align="left">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "input", @style = "width:450px;" })
                   
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                  @Html.ValidationMessageFor(m => m.FirstName,"", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            <tr>
                <td align="left">
                    <strong>@Html.LabelFor(m => m.LastName)</strong>
                </td>
                <td align="left">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "input", @style = "width:450px;" })
                 
                </td>
            </tr>
            <tr>
               <td>&nbsp;</td>
                <td>
                      @Html.ValidationMessageFor(m => m.LastName,"", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            <tr>
                <td align="left">
                    <strong>Gender</strong>
                </td>
                <td align="left">
                    @Html.RadioButton("Gender", (Int32)Gender.Male)
                    <label for="female">
                        Male</label>
                    @Html.RadioButton("Gender", (Int32)Gender.Female)
                    <label for="male">
                        Female</label>
                    @Html.RadioButton("Gender", (Int32)Gender.Other)
                    <label for="private">
                        Rather not say</label>
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                  @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>
             @if (ViewBag.EditUser == false)
            {
                 @Html.Hidden("EmailOrUsername","dummydummy")
                 @Html.Hidden("PasswordRecoveryEmailId", "dummy@mmummy.com")
            <tr>
                <td valign="top" align="left">
                    <strong>@Html.LabelFor(m => m.EmailId)</strong>
                </td>
                <td align="left">
                    @Html.TextBoxFor(m => m.EmailId, new { @class = "input", @style = "width:450px;" })
               
                </td>
            </tr>
            <tr>
               <td>&nbsp;</td>
                <td>
                        @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>           
            <tr>
                <td valign="top" align="left">
                    <strong>@Html.LabelFor(m => m.Password)</strong>
                </td>
                <td align="left">
                    @Html.PasswordFor(m => m.Password, new { @class = "input", @style = "width:450px;" })
                 
                </td>
            </tr>
            <tr>
            <td>&nbsp;</td>
                <td>
                     @Html.ValidationMessageFor(m => m.Password, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            <tr>
                <td valign="top" align="left">
                    <strong>@Html.LabelFor(m => m.ConfirmPassword)</strong>
                </td>
                <td align="left">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input", @style = "width:450px;" })
                  
                </td>
            </tr>
            <tr>
               <td>&nbsp;</td>
                <td>
                   @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            <tr>
                <td valign="top" align="left">
                    <strong>@Html.LabelFor(m => m.UserName)</strong>
                </td>
                <td align="left">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "input", @style = "width:450px;" })
                  
                </td>
            </tr>
            <tr>
            <td>&nbsp;</td>
                <td>
                   @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>
            }
             else
             {
                <tr>
                <td valign="top" align="left">
                    <strong>@Html.LabelFor(m => m.PasswordRecoveryEmailId)</strong>
                </td>
                <td align="left">
                    @Html.TextBoxFor(m => m.PasswordRecoveryEmailId, new { @class = "input", @style = "width:450px;" })
               
                </td>
            </tr>
            <tr>
               <td>&nbsp;</td>
                <td>
                        @Html.ValidationMessageFor(m => m.PasswordRecoveryEmailId, "", new { @class = "inline-input-error-message" })
                </td>
            </tr>     
                @Html.HiddenFor(m => m.UserName) 
             }
            <tr>
                <td valign="top" align="left">
                   
                </td>
                <td align="left">
                    @Html.CheckBoxFor(m => m.NewsLetterEnabled)
                    Centro Newsletter.
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td align="center">
                    &nbsp;
                </td>
                <td align="left">
                    <div class="black_btn2">
                        <span class="upper">
                            <input type="submit" value="SUBMIT" name=""></span></div>
                </td>
            </tr>
        </table>
    </div>
}
