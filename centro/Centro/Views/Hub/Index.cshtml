@model PagingResult<Hub>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BuyerLayout.cshtml";
}
@section title{
     Manage your hub    
}
<div class="white-area-inner">
    @Html.Partial("_BuyerLeftSideMenu")
    <div class="profile-right-bar primary">
        <div class="right-panel one-column">
            <div class="row">
                <div class="ui-tabs-panel ui-widget-content ui-corner-bottom" id="ui-tabs-1">
                @Html.ActionLink("Create Hub", "Create", "Hub")                
                @Html.Partial("_Paging") 
                <div class="clear">&nbsp;</div>
                <div id="hub_result">
                    @Html.Partial("_ManageHubsList", Model.List)
                </div>
                @Html.Partial("_Paging") 
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <link href="@Url.Content("~/Content/paging/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Custom/paging.js")" type="text/javascript"></script>    
    <script type="text/javascript" src="@Url.Content("~/Scripts/custom/hubs.js")"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            PageNumbering("@Model.TotalCount", null);
            IsManageHubs = true;
            userID = '@ViewBag.UserID';
        });
    </script>
    
}

