@model List<AccountActivityViewModel>
@if (Model.Count() > 0)
{
<div class="activity-log-pop">
    <ul>
    @foreach (var item in Model)
    {
        <li><a href="javascript:;">@if (!string.IsNullOrEmpty(item.ActivityImage))
        { <img src="@item.ActivityImage" class="img" alt=""> }<div class="text"><strong>@Html.Raw(item.ActivityText)</strong><br><span class="date">@item.CreatedOn.ToShortDateString() @item.CreatedOn.ToShortTimeString()</span></div></a></li>
    }
        <li class="odd"><a class="all" href="@Url.Action("Activities", "User")">View All</a> </li>
    </ul>
</div>
}