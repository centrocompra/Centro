<div class="box">
    <div class="contest-leftside-heading contest-leftside-sections bor-bot">
        <h3>Browse UX Challenges</h3>
    </div>
    <div class=" contest-leftside-sections bor-bot">
        <ul class="links">
            @foreach (Category cat in Categories)
            {
                if (ViewBag.PageType == "UserContest11")
                {
                    if (selectedCategory.ToLower() == cat.Name.ToLower())
                    {
                <li><a class="active" href="@Url.Action(ViewBag.PageType, "Contest", new { id = cat.CategoryID, name = Utility.SpacesToHifen(cat.Name), UserName = Utility.SpacesToHifen(ViewBag.UserName) })">@cat.Name</a></li>
                    }
                    else
                    {
                <li><a href="@Url.Action(ViewBag.PageType, "Contest", new { id = cat.CategoryID, name = Utility.SpacesToHifen(cat.Name), UserName = Utility.SpacesToHifen(ViewBag.UserName) })">@cat.Name</a></li>
                    }
                }
                else
                {
                    if (selectedCategory.ToLower() == cat.Name.ToLower())
                    {
                        <li><a class="active" href="@Url.Action("ViewContest", "Contest", new { id = cat.CategoryID, CategoryName = Utility.SpacesToHifen(cat.Name) })">@cat.Name</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("ViewContest", "Contest", new { id = cat.CategoryID, CategoryName = Utility.SpacesToHifen(cat.Name) })">@cat.Name</a></li>
                    }
                }
            }
        </ul>
    </div>
