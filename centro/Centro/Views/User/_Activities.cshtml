@model List<AccountActivityViewModel>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td width="10%"><span class="event-info pb5"> @if(!string.IsNullOrEmpty(item.ActivityImage)){ 
                                                             <a href="@item.ActivityLink"><img src="@item.ActivityImage" /></a> }
                            </span></td>
			<td width="*"> <span class="act-perform row"> @Html.Raw(item.ActivityText) </span></td>			
		</tr>
    }
}
else
{
    <tr><td>No Activity found.</td></tr>
}