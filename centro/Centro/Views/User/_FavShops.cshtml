@model List<ShopViewModel>
@{
    var user = (SiteUserDetails)ViewBag.CentroUsers;
    
}
<div class="row table-listing">
@if (Model.Count() > 0)
{
    <table id="table1" class="tablesorter tbl-chk-1">
        <tbody>
            <tr class="tablehead">
                <th width="2%">
                    #
                </th>
                <th width="7%" align="center">
                     Shop&nbsp;ID
                </th>
                <th width="165px">
                   Shop&nbsp;Name
                </th>
                <th width="165px">
                    Shop&nbsp;Owner&nbsp;Name
                </th>
                          
            </tr>
            @{int i = 1;}
            @foreach (var item in Model)
            {
            <tr class="@(i % 2 != 0 ? "even" : "odd")">
                <td>
                    @i
                </td>
                <td align="center">
                   @item.ShopID
                </td>
                <td>
                   @item.ShopName
                </td>
                <td>
                   @item.ShopOwnerName
                </td>
                               
            </tr>
                i++;
            }
          
        </tbody>
    </table>
}
else
{
    <div>No favorite shop found</div>
}