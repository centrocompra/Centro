@model PagingResult<AccountActivityViewModel>
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_BuyerLayout.cshtml";
}
@section title{
User Activities
}
@{
    
}
<div class="white-area-inner">
    @Html.Partial("_BuyerLeftSideMenu")
    <div class="profile-right-bar primary">
        <div class="primary">
			<div class="row"> <!--<a href="#" class="button1 fRight"><span>Edit Activity</span></a>-->
				<h2>Activity Feed </h2>
                @if (Model.List.Count() > 0)
                {
                <a href="@Url.Action("DeleteAllActivities", "User")" class="button1">Clear All</a>}
			</div>
			<div class="activity-log-mn">
                @Html.Partial("_Paging")
				<div class="activity-log-mn-tbl row">
					<table width="100%" border="0" cellspacing="0" cellpadding="5" id="Result" class="">
                        @Html.Partial("_Activities", Model.List)
					</table>
				</div>
                @Html.Partial("_Paging")
			</div>
		</div>
    </div>
</div>
@section scripts{
<script type="text/javascript">
    var totalCount = 0;
    $(document).ready(function () {
        totalCount = parseInt('@Model.TotalCount');
        UserID = '@ViewBag.UserID';
    });
</script>
<link href="@Url.Content("~/Content/paging/style.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/Custom/paging.js")" type="text/javascript"></script>    
<script src="@Url.Content("~/Scripts/Custom/ActivitiesPaging.js")" type="text/javascript"></script>
}
